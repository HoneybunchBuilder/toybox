{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Configure arm64 macos",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-Bbuild/arm64/macos",
                "-G\"\"Ninja Multi-Config\"\"",
                "-DVCPKG_TARGET_TRIPLET=arm64-osx",
                "-DCMAKE_EXPORT_COMPILE_COMMANDS=ON"
            ],
            "problemMatcher": []
        },
        {
            "label": "Build arm64 macos Debug",
            "type": "shell",
            "command": "cmake --build build/arm64/macos --config Debug",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build arm64 macos RelWithDebInfo",
            "type": "shell",
            "command": "cmake --build build/arm64/macos --config RelWithDebInfo",
            "group": "build"
        },
        {
            "label": "Build arm64 macos Release",
            "type": "shell",
            "command": "cmake --build build/arm64/macos --config Release",
            "group": "build"
        },
        {
            "label": "Package arm64 macos Debug",
            "type": "shell",
            "command": "cmake --build build/arm64/macos  --config Debug --target package",
            "problemMatcher": [],
            "dependsOn": [
                "Build arm64 macos Debug"
            ]
        },
        {
            "label": "Package arm64 macos RelWithDebInfo",
            "type": "shell",
            "command": "cmake --build build/arm64/macos  --config RelWithDebInfo --target package",
            "problemMatcher": [],
            "dependsOn": [
                "Build arm64 macos RelWithDebInfo"
            ]
        },
        {
            "label": "Package arm64 macos Release",
            "type": "shell",
            "command": "cmake --build build/arm64/macos  --config Release --target package",
            "problemMatcher": [],
            "dependsOn": [
                "Build arm64 macos Release"
            ]
        }
    ]
}