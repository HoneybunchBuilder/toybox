{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Configure x64 Linux GCC",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-Bbuild/x64/linux-gcc",
                "-G\"Ninja Multi-Config\"",
                "-DCMAKE_C_COMPILER=gcc",
                "-DCMAKE_CXX_COMPILER=g++",
                "-DVCPKG_TARGET_TRIPLET=x64-linux",
                "-DCMAKE_EXPORT_COMPILE_COMMANDS=ON"
            ],
            "problemMatcher": []
        },
        {
            "label": "Configure x64 Linux Clang",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-Bbuild/x64/linux-llvm",
                "-G\"Ninja Multi-Config\"",
                "-DCMAKE_C_COMPILER=clang",
                "-DCMAKE_CXX_COMPILER=clang++",
                "-DVCPKG_TARGET_TRIPLET=x64-linux",
                "-DCMAKE_EXPORT_COMPILE_COMMANDS=ON",
            ],
            "problemMatcher": []
        },
        {
            "label": "Build x64 Linux GCC Debug",
            "type": "shell",
            "command": "cmake --build build/x64/linux-gcc --config Debug",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build x64 Linux GCC RelWithDebInfo",
            "type": "shell",
            "command": "cmake --build build/x64/linux-gcc --config RelWithDebInfo",
            "group": "build"
        },
        {
            "label": "Build x64 Linux GCC Release",
            "type": "shell",
            "command": "cmake --build build/x64/linux-gcc --config Release",
            "group": "build"
        },
        {
            "label": "Build x64 Linux LLVM Debug",
            "type": "shell",
            "command": "cmake --build build/x64/linux-llvm --config Debug",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build x64 Linux LLVM RelWithDebInfo",
            "type": "shell",
            "command": "cmake --build build/x64/linux-llvm --config RelWithDebInfo",
            "group": "build"
        },
        {
            "label": "Build x64 Linux LLVM Release",
            "type": "shell",
            "command": "cmake --build build/x64/linux-llvm --config Release",
            "group": "build"
        },
        {
            "label": "Package x64 Linux GCC Debug",
            "type": "shell",
            "command": "cmake --build build/x64/linux-gcc --config Debug --target package",
            "problemMatcher": [],
            "dependsOn": [
                "Build x64 Linux GCC Debug"
            ]
        },
        {
            "label": "Package x64 Linux GCC RelWithDebInfo",
            "type": "shell",
            "command": "cmake --build build/x64/linux-gcc  --config RelWithDebInfo --target package",
            "problemMatcher": [],
            "dependsOn": [
                "Build x64 Linux GCC RelWithDebInfo"
            ]
        },
        {
            "label": "Package x64 Linux GCC Release",
            "type": "shell",
            "command": "cmake --build build/x64/linux-gcc  --config Release --target package",
            "problemMatcher": [],
            "dependsOn": [
                "Build x64 Linux GCC Release"
            ]
        },
        {
            "label": "Package x64 Linux LLVM Debug",
            "type": "shell",
            "command": "cmake --build build/x64/linux-llvm --config Debug --target package",
            "problemMatcher": [],
            "dependsOn": [
                "Build x64 Linux LLVM Debug"
            ]
        },
        {
            "label": "Package x64 Linux LLVM RelWithDebInfo",
            "type": "shell",
            "command": "cmake --build build/x64/linux-llvm  --config RelWithDebInfo --target package",
            "problemMatcher": [],
            "dependsOn": [
                "Build x64 Linux LLVM RelWithDebInfo"
            ]
        },
        {
            "label": "Package x64 Linux LLVM Release",
            "type": "shell",
            "command": "cmake --build build/x64/linux-llvm  --config Release --target package",
            "problemMatcher": [],
            "dependsOn": [
                "Build x64 Linux LLVM Release"
            ]
        }
    ]
}